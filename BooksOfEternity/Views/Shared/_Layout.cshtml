<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Books Of Eternity</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Books Of Eternity</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        @{
            // Navigation active
            string homeActive = "";
            string bookActive = "";
            
            switch (ViewBag.Title)
            {
                case "Главная":
                {
                    homeActive = "active";
                    break;
                }
                case "Книги":
                {
                    bookActive = "active";
                    break;
                }
            }
        }
        <ul class="navbar-nav">
            <li class="nav-item @homeActive">
                <a id="nav_home" class="nav-link" asp-controller="Home" asp-action="Index">Главная</a>
            </li>
            <li class="nav-item @bookActive">
                <a id="nav_book" class="nav-link" asp-controller="Book" asp-action="Index">Книги</a>
            </li>
        </ul>
    </div>
</nav>
<div>
    @RenderBody()
</div>
</body>
</html>